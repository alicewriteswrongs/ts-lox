{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    },
    "typeRoots": [
      "src/types/",
      "node_modules/@types/"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types/**/*.d.ts"
  ],
  "ts-node": {
    "files": true
  }
}
